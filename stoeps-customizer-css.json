{
    "name": "CSS Customizations",
    "title": "Fixing tiny annoying things",
    "description": "Adding some css to fix the most annoying things..",
    "services": [
        "Connections",
        "Customizer"
    ],
    "state": "enabled",
    "extensions": [
        {
            "name": "Blogs",
            "type": "com.ibm.customizer.ui",
            "payload": {
                "include-files": [
                    "stoeps-customizer-css/blogs.css"
                ],
                "cache-headers": {
                    "cache-control": "max-age=0"
                }
            },
            "path": "blogs",
            "state": "enabled"
        },
        {
            "name": "Boards Ads",
            "type": "com.ibm.customizer.ui",
            "payload": {
                "match": {
                    "user-email": [
                        "jjones5@stoeps.home",
                        "jjones6@stoeps.home"
                    ]
                },
                "include-files": [
                    "stoeps-customizer-css/boards.css"
                ],
                "cache-headers": {
                    "cache-control": "max-age=0"
                }
            },
            "path": "boards",
            "state": "enabled"
        },
        {
            "name": "Communities",
            "type": "com.ibm.customizer.ui",
            "payload": {
                "include-files": [
                    "stoeps-customizer-css/communities.css"
                ],
                "cache-headers": {
                    "cache-control": "max-age=0"
                }
            },
            "path": "communities",
            "state": "enabled"
        },
        {
            "name": "Files",
            "type": "com.ibm.customizer.ui",
            "payload": {
                "include-files": [
                    "stoeps-customizer-css/files.css"
                ],
                "cache-headers": {
                    "cache-control": "max-age=0"
                }
            },
            "path": "files",
            "state": "enabled"
        },
        {
            "name": "Forums",
            "type": "com.ibm.customizer.ui",
            "payload": {
                "include-files": [
                    "stoeps-customizer-css/forums.css"
                ],
                "cache-headers": {
                    "cache-control": "max-age=0"
                }
            },
            "path": "forums",
            "state": "enabled"
        },
        {
            "name": "Global CSS",
            "type": "com.ibm.customizer.ui",
            "payload": {
                "include-files": [
                    "stoeps-customizer-css/global.css"
                ],
                "cache-headers": {
                    "cache-control": "max-age=0"
                }
            },
            "path": "global",
            "state": "enabled"
        },
        {
            "name": "TE Wizard",
            "type": "com.ibm.customizer.ui",
            "payload": {
                "exclude": {
                    "user-email": [
                        "jjones2@stoeps.home",
                        "jjones1@stoeps.home"
                    ]
                },
                "include-files": [
                    "stoeps-customizer-css/te-wizard.css"
                ],
                "cache-headers": {
                    "cache-control": "max-age=0"
                }
            },
            "path": "te-creation-wizard",
            "state": "enabled"
        },
        {
            "name": "Tasks Nav Button",
            "type": "com.hcl.connections.nav",
            "payload": {
                "customEntries": [
                    {
                        "id": "boards-nav-entry",
                        "name": "Boards",
                        "action": "add",
                        "link": "/boards/",
                        "alternate_links": [
                            "/boards/my",
                            "/boards/board"
                        ],
                        "icon": "data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' xml:space='preserve'%3E%3Cpath d='M4.5 3h7.3v4.6H4.5zm7.9 0h7.3v4.6h-7.3zm-.6 11.4H4.4V8.9h7.4v5.5zM4.9 14h6.5V9.3H4.9V14zm14.8.4h-7.2V8.9h7.2v5.5zm-6.8-.4h6.3V9.3h-6.3V14zm6.8 7.1h-7.2v-5.5h7.2v5.5zm-6.8-.4h6.3v-4.6h-6.3v4.6z' style='fill:%23ffffff'/%3E%3C/svg%3E",
                        "order": 4500,
                        "submenu": [],
                        "location": "main"
                    }
                ],
                "cacheExpiration": 20000
            },
            "path": "global",
            "state": "enabled"
        },
        {
            "name": "Tiny",
            "type": "com.ibm.customizer.ui",
            "payload": {
                "include-files": [
                    "stoeps-customizer-css/tiny.css"
                ],
                "cache-headers": {
                    "cache-control": "max-age=0"
                }
            },
            "path": "global",
            "state": "enabled"
        },
        {
            "name": "Top Navigation Logo",
            "type": "com.hcl.connections.custom.style",
            "payload": {
                "style-customization": {
                    "top-navigation": {
                        "logo": {
                            "order": "1",
                            "src": "/files/customizer/stoeps-customizer-css/logo-white.png"
                        }
                    }
                },
                "cacheExpiration": 360000
            },
            "path": "global",
            "state": "enabled"
        },
        {
            "name": "Wikis",
            "type": "com.ibm.customizer.ui",
            "payload": {
                "include-files": [
                    "stoeps-customizer-css/wikis.css"
                ],
                "cache-headers": {
                    "cache-control": "max-age=0"
                }
            },
            "path": "wikis",
            "state": "enabled"
        },
        {
            "name": "connections-tours-config",
            "type": "com.hcl.connections.tours",
            "payload": {
                "disabled": true,
                "cacheExpiration": 86400000,
                "skipCacheExpiration": 86400000
            },
            "path": "global",
            "state": "enabled"
        }
    ]
}
